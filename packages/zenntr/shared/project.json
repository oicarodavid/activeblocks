        "tsConfig": "packages/zenntr/shared/tsconfig.lib.json",
        "assets": ["packages/zenntr/shared/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": []
}
